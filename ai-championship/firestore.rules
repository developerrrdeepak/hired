rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC READ/WRITE for Demo/Hackathon Stability
    // This fixes "Failed to start conversation", "Profile not found", etc.
    // In production, revert to request.auth != null
    
    // Explicitly allow networking features
    match /conversations/{document=**} {
      allow read, write: if true;
    }
    match /connections/{document=**} {
      allow read, write: if true;
    }
    match /messages/{document=**} {
      allow read, write: if true;
    }
    match /users/{document=**} {
      allow read, write: if true;
    }
    
    // Default fallback
    match /{document=**} {
      allow read: if true;
      allow write: if true; // Temporary allow all to ensure no demo blockers
    }
  }
}
