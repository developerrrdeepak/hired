rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // RESTORED: Permissive rules to fix "Blocking Access" errors.
    // 1. Allow public read for everything (fixes landing page, job board, etc.)
    // 2. Allow write only for logged-in users.
    
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
